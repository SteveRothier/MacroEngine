<Window x:Class="MacroEngine.UI.PresetsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionnaire de Presets"
        Width="700"
        Height="550"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundPrimaryBrush}"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="ðŸ“š Presets d'Actions"
                       Style="{StaticResource TextHeading}"
                       FontSize="20"
                       Margin="0,0,0,8"/>
            <TextBlock Text="SÃ©lectionnez un preset pour l'insÃ©rer dans votre macro"
                       Style="{StaticResource TextMuted}"
                       FontSize="13"/>
        </StackPanel>

        <!-- Liste des presets -->
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundSecondaryBrush}"
                CornerRadius="8"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="1"
                Padding="12"
                Margin="0,0,0,16">
            
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="PresetsStackPanel">
                        <!-- Message si aucun preset -->
                        <StackPanel x:Name="EmptyStatePanel"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Visibility="Collapsed"
                                    Margin="0,60,0,0">
                            <TextBlock Text="ðŸ“¦" 
                                       FontSize="48" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            <TextBlock Text="Aucun preset sauvegardÃ©" 
                                       Style="{StaticResource TextHeading}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Faites clic droit sur une action pour la sauvegarder" 
                                       Style="{StaticResource TextMuted}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Les cartes de preset seront ajoutÃ©es dynamiquement ici -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Fermer"
                    Style="{StaticResource ButtonSecondary}"
                    Width="100"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
