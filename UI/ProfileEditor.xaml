<UserControl x:Class="MacroEngine.UI.ProfileEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Éditeur de Profil" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nom:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="ProfileNameTextBox" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Description:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="ProfileDescriptionTextBox" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Height="60"/>
            </Grid>
        </StackPanel>

        <!-- Liste des macros du profil -->
        <GroupBox Grid.Row="1" Header="Macros du Profil" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="ProfileMacrosListBox" 
                         Grid.Row="0"
                         SelectionMode="Multiple">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Ajouter Macro" Click="AddMacro_Click" Margin="0,0,5,0"/>
                    <Button Content="Retirer Macro" Click="RemoveMacro_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Barre d'outils -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button Content="Sauvegarder" Click="SaveProfile_Click" Margin="0,0,5,0" Padding="10,5"/>
            <Button Content="Annuler" Click="Cancel_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl>

