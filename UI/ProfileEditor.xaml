<UserControl x:Class="MacroEngine.UI.ProfileEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.Resources>
        <!-- TextBox recherche : pas de bordure pourpre au focus -->
        <Style x:Key="MacroSearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nom du profil -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Nom du profil" Style="{StaticResource TextLabel}" Margin="0,0,0,6"/>
            <TextBox x:Name="ProfileNameTextBox" Style="{StaticResource TextBoxModern}"/>
            <TextBlock x:Name="ProfileNameErrorText" Text="Le nom ne peut pas être vide."
                       Foreground="{StaticResource ErrorBrush}" FontSize="12" Margin="0,4,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Macros du profil -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundTertiaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1"
                CornerRadius="8" Padding="12" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="200" MaxHeight="380"/>
                </Grid.RowDefinitions>
                <!-- Ligne : Macros inclus | icône Ajouter | icône Retirer | (espace) | Recherche -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Macros inclus" Style="{StaticResource TextSubheading}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Grid.Column="1" Style="{StaticResource ButtonGhost}" Click="AddMacro_Click"
                            Padding="8,6" MinWidth="36" Width="36" ToolTip="Ajouter une macro">
                        <TextBlock Text="&#xE081;" FontFamily="{StaticResource FontLucide}" FontSize="14"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Button>
                    <Button Grid.Column="2" Style="{StaticResource ButtonGhost}" Click="RemoveMacro_Click"
                            Padding="8,6" MinWidth="36" Width="36" ToolTip="Retirer la sélection">
                        <TextBlock Text="&#xE18E;" FontFamily="{StaticResource FontLucide}" FontSize="14"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Button>
                    <!-- Recherche à droite, sans décalage : cadre gris, pas de pourpre -->
                    <Border Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#1E1B22" BorderBrush="#2D2934" BorderThickness="1"
                            CornerRadius="4" Padding="8,6" MinWidth="160" Width="160">
                        <Grid>
                            <TextBlock x:Name="MacroSearchPlaceholder" Text="Rechercher..."
                                       Foreground="#9CA3AF" FontSize="12"
                                       IsHitTestVisible="False" VerticalAlignment="Center"/>
                            <TextBox x:Name="MacroSearchTextBox" Background="Transparent" BorderThickness="0"
                                     Foreground="White" CaretBrush="White" Padding="0"
                                     VerticalContentAlignment="Center"
                                     TextChanged="MacroSearchTextBox_TextChanged"
                                     Style="{StaticResource MacroSearchTextBoxStyle}"/>
                        </Grid>
                    </Border>
                </Grid>
                <ListBox x:Name="ProfileMacrosListBox" Grid.Row="1" Background="Transparent" BorderThickness="0"
                         SelectionMode="Multiple" Margin="0,0,0,0" Padding="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.CanContentScroll="False"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                         HorizontalContentAlignment="Center">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                                       ItemWidth="212" ItemHeight="42"
                                       Margin="17,0,0,0"
                                       HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                          Margin="{TemplateBinding Padding}"
                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="4,1" Margin="0,0,12,7" Background="{StaticResource BackgroundPrimaryBrush}"
                                    CornerRadius="3" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1"
                                    HorizontalAlignment="Stretch" Height="35">
                                <TextBlock Text="{Binding Name}" FontSize="12"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Boutons Sauvegarder / Annuler -->
        <Border Grid.Row="2" Padding="0,8,0,0" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler" Style="{StaticResource ButtonGhost}"
                        Click="Cancel_Click" Margin="0,0,8,0" Padding="12,8"/>
                <Button Content="Sauvegarder" Style="{StaticResource ButtonPrimary}"
                        Click="SaveProfile_Click" Padding="12,8"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
