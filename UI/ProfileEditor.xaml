<UserControl x:Class="MacroEngine.UI.ProfileEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nom du profil -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Nom du profil" Style="{StaticResource TextLabel}" Margin="0,0,0,6"/>
            <TextBox x:Name="ProfileNameTextBox" Style="{StaticResource TextBoxModern}"/>
            <TextBlock x:Name="ProfileNameErrorText" Text="Le nom ne peut pas Ãªtre vide."
                       Foreground="{StaticResource ErrorBrush}" FontSize="12" Margin="0,4,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Macros du profil -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundTertiaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1"
                CornerRadius="8" Padding="12" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Macros inclus" Style="{StaticResource TextSubheading}"
                           Margin="0,0,0,8"/>
                <!-- Barre de recherche -->
                <Grid Grid.Row="1" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="&#xE09C;" FontFamily="{StaticResource FontLucide}" FontSize="14"
                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Border Grid.Column="1" Background="{StaticResource BackgroundPrimaryBrush}"
                            BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1"
                            CornerRadius="4" Padding="8,6">
                        <Grid>
                            <TextBlock x:Name="MacroSearchPlaceholder" Text="Rechercher une macro..."
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12"
                                       IsHitTestVisible="False" VerticalAlignment="Center" Margin="0,0,0,0"/>
                            <TextBox x:Name="MacroSearchTextBox" Background="Transparent" BorderThickness="0"
                                     Foreground="{StaticResource TextPrimaryBrush}" Padding="0"
                                     VerticalContentAlignment="Center" TextChanged="MacroSearchTextBox_TextChanged"/>
                        </Grid>
                    </Border>
                </Grid>
                <ListBox x:Name="ProfileMacrosListBox" Grid.Row="2" Background="Transparent" BorderThickness="0"
                         SelectionMode="Multiple" Margin="0,0,0,10" Padding="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,6" Margin="0,0,0,4" Background="{StaticResource BackgroundPrimaryBrush}"
                                    CornerRadius="4" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis" LineHeight="18" MaxHeight="18"/>
                                    <TextBlock Text="{Binding Description}" FontSize="11"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               TextTrimming="CharacterEllipsis" LineHeight="16" MaxHeight="16"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <Button Style="{StaticResource ButtonSecondary}" Click="AddMacro_Click" Margin="0,0,8,0" Padding="10,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE081;" FontFamily="{StaticResource FontLucide}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Ajouter une macro" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ButtonGhost}" Click="RemoveMacro_Click" Padding="10,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE18E;" FontFamily="{StaticResource FontLucide}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Retirer" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Boutons Sauvegarder / Annuler -->
        <Border Grid.Row="2" Padding="0,8,0,0" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler" Style="{StaticResource ButtonGhost}"
                        Click="Cancel_Click" Margin="0,0,8,0" Padding="12,8"/>
                <Button Content="Sauvegarder" Style="{StaticResource ButtonPrimary}"
                        Click="SaveProfile_Click" Padding="12,8"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
