<Window x:Class="MacroEngine.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Paramètres" 
        Height="560" Width="760"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MinHeight="480" MinWidth="640"
        Background="{StaticResource BackgroundPrimaryBrush}"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Border x:Name="RootBorder"
            Background="{StaticResource BackgroundPrimaryBrush}"
            BorderBrush="{StaticResource BorderLightBrush}"
            BorderThickness="1"
            Focusable="True"
            KeyboardNavigation.IsTabStop="False">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barre de titre -->
            <Border x:Name="TitleBarBorder"
                    Grid.Row="0"
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="16,0,0,0"
                    Height="44"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="Paramètres"
                                   Style="{StaticResource TextHeading}"
                                   Foreground="White" FontSize="15" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Stretch"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button x:Name="MinimizeButton" Style="{StaticResource WindowCaptionButtonStyle}"
                                ClickMode="Press" Focusable="False" Foreground="White"
                                FontFamily="{StaticResource FontLucide}" Content="&#xE11C;"
                                ToolTip="Réduire" Click="MinimizeButton_Click"/>
                        <Button x:Name="MaximizeButton" Style="{StaticResource WindowCaptionButtonStyle}"
                                ClickMode="Press" Focusable="False" Foreground="White"
                                FontFamily="{StaticResource FontLucide}" Content="&#xE167;"
                                ToolTip="Agrandir" Click="MaximizeButton_Click"/>
                        <Button x:Name="CloseButton" Style="{StaticResource WindowCaptionCloseButtonStyle}"
                                ClickMode="Press" Focusable="False" Foreground="White"
                                FontFamily="{StaticResource FontLucide}" Content="&#xE1B2;"
                                ToolTip="Fermer" Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Corps : sidebar + contenu -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar navigation -->
                <Border Grid.Column="0"
                        Background="{StaticResource BackgroundSecondaryBrush}"
                        BorderBrush="{StaticResource BorderLightBrush}"
                        BorderThickness="0,0,1,0"
                        Padding="0,16,0,16">
                    <ListBox x:Name="SettingsNavListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0,4"
                             SelectionChanged="SettingsNavListBox_SelectionChanged"
                             SelectedIndex="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Focusable" Value="True"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Margin" Value="8,2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Background="Transparent"
                                                    BorderBrush="{StaticResource AccentPrimaryBrush}"
                                                    BorderThickness="0"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentSelectionBrush}"/>
                                                    <Setter TargetName="Bd" Property="BorderThickness" Value="3,0,0,0"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource BackgroundTertiaryBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBoxItem>
                            <ListBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE284;" FontFamily="{StaticResource FontLucide}" FontSize="18"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Raccourcis clavier" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ListBoxItem.Content>
                        </ListBoxItem>
                        <ListBoxItem>
                            <ListBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE0CC;" FontFamily="{StaticResource FontLucide}" FontSize="18"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="OCR et reconnaissance" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ListBoxItem.Content>
                        </ListBoxItem>
                    </ListBox>
                </Border>

                <!-- Zone contenu (panneaux par section) -->
                <ScrollViewer Grid.Column="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="24,20"
                              Background="{StaticResource BackgroundPrimaryBrush}">
                    <Grid>
                        <!-- Panneau Raccourcis -->
                        <StackPanel x:Name="ShortcutsPanel" Visibility="Visible">
                            <TextBlock Text="Raccourcis clavier"
                                       Style="{StaticResource TextHeading}"
                                       FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Définissez les touches globales pour lancer et arrêter les macros."
                                       Style="{StaticResource TextMuted}"
                                       FontSize="13" TextWrapping="Wrap" Margin="0,0,0,24"/>

                            <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                    BorderBrush="{StaticResource BorderInternalBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusPanel}"
                                    Padding="20,16"
                                    Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Exécuter la macro sélectionnée"
                                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"
                                               VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBox x:Name="ExecuteKeyTextBox" Grid.Row="1" Grid.Column="0"
                                             IsReadOnly="True"
                                             PreviewKeyDown="ExecuteKeyTextBox_PreviewKeyDown"
                                             KeyDown="ExecuteKeyTextBox_KeyDown"
                                             GotFocus="ExecuteKeyTextBox_GotFocus"
                                             LostFocus="ExecuteKeyTextBox_LostFocus"
                                             Margin="0,0,12,0" Padding="10,8"/>
                                    <Button x:Name="CaptureExecuteKeyButton" Grid.Row="1" Grid.Column="1"
                                            Content="Modifier" Click="CaptureExecuteKeyButton_Click"
                                            ClickMode="Press" Focusable="False"
                                            Style="{StaticResource ButtonSecondary}"
                                            Padding="14,8" MinWidth="90"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Arrêter la macro en cours"
                                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"
                                               VerticalAlignment="Center" Margin="0,16,0,8"/>
                                    <TextBox x:Name="StopKeyTextBox" Grid.Row="3" Grid.Column="0"
                                             IsReadOnly="True"
                                             PreviewKeyDown="StopKeyTextBox_PreviewKeyDown"
                                             KeyDown="StopKeyTextBox_KeyDown"
                                             GotFocus="StopKeyTextBox_GotFocus"
                                             LostFocus="StopKeyTextBox_LostFocus"
                                             Margin="0,0,12,0" Padding="10,8"/>
                                    <Button x:Name="CaptureStopKeyButton" Grid.Row="3" Grid.Column="1"
                                            Content="Modifier" Click="CaptureStopKeyButton_Click"
                                            ClickMode="Press" Focusable="False"
                                            Style="{StaticResource ButtonSecondary}"
                                            Padding="14,8" MinWidth="90"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Panneau OCR -->
                        <StackPanel x:Name="OcrPanel" Visibility="Collapsed">
                            <TextBlock Text="OCR et reconnaissance de texte"
                                       Style="{StaticResource TextHeading}"
                                       FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Configuration de Tesseract pour les conditions « Texte à l'écran »."
                                       Style="{StaticResource TextMuted}"
                                       FontSize="13" TextWrapping="Wrap" Margin="0,0,0,24"/>

                            <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                    BorderBrush="{StaticResource BorderInternalBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusPanel}"
                                    Padding="20,16">
                                <StackPanel>
                                    <TextBlock Text="Dossier tessdata"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="TessdataPathTextBox"
                                                 Grid.Column="0" IsReadOnly="True"
                                                 Margin="0,0,12,0" Padding="10,8"
                                                 TextWrapping="Wrap"/>
                                        <Button x:Name="OpenTessdataFolderButton" Grid.Column="1"
                                                Content="Ouvrir" Click="OpenTessdataFolderButton_Click"
                                                ClickMode="Press" Focusable="False"
                                                Style="{StaticResource ButtonSecondary}"
                                                Padding="14,8" MinWidth="90"/>
                                    </Grid>

                                    <TextBlock Text="Fichiers de langue présents"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="13" FontWeight="SemiBold" Margin="0,8,0,8"/>
                                    <ListBox x:Name="TessdataFilesListBox"
                                             MaxHeight="160" Margin="0,0,0,12"
                                             Background="{StaticResource BackgroundSecondaryBrush}"
                                             BorderThickness="1"
                                             BorderBrush="{StaticResource BorderLightBrush}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="4,2">
                                                    <TextBlock Text="&#xE06C;" FontFamily="{StaticResource FontLucide}"
                                                               Foreground="Green" FontWeight="Bold"
                                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <TextBlock x:Name="TessdataStatusTextBlock"
                                               Style="{StaticResource TextMuted}"
                                               FontSize="12" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- Pied -->
            <Border Grid.Row="2"
                    Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,14">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Enregistrer"
                            Click="OkButton_Click"
                            Style="{StaticResource ButtonPrimary}"
                            ClickMode="Press"
                            Focusable="False"
                            Width="100"
                            Height="34"
                            Margin="0,0,10,0"
                            IsDefault="True"/>
                    <Button Content="Annuler"
                            Click="CancelButton_Click"
                            Style="{StaticResource ButtonSecondary}"
                            ClickMode="Press"
                            Focusable="False"
                            Width="90"
                            Height="34"
                            IsCancel="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
