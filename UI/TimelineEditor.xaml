<UserControl x:Class="MacroEngine.UI.TimelineEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Éditeur de Timeline" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Slider x:Name="ZoomSlider" Minimum="0.1" Maximum="5" Value="1" Width="200" Margin="0,0,10,0"/>
                <TextBlock x:Name="ZoomText" Text="100%" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Timeline -->
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="10">
            <Canvas x:Name="TimelineCanvas" 
                    Background="White"
                    Height="400"
                    Width="2000">
                <!-- Les actions seront dessinées ici -->
            </Canvas>
        </ScrollViewer>

        <!-- Barre de temps -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Temps:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Slider x:Name="TimeSlider" 
                    Grid.Column="1" 
                    Minimum="0" 
                    Maximum="100"
                    ValueChanged="TimeSlider_ValueChanged"/>
            <TextBlock x:Name="TimeText" 
                       Grid.Column="2" 
                       Text="0ms" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</UserControl>

