<Window x:Class="MacroEngine.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MacroEngine - Macros Clavier" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barre de menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="Fichier">
                <MenuItem Header="Nouvelle Macro" Click="NewMacro_Click"/>
                <MenuItem Header="Sauvegarder" Click="SaveMacro_Click"/>
                <Separator/>
                <MenuItem Header="Exporter Macro..." Click="ExportMacro_Click"/>
                <MenuItem Header="Importer Macro..." Click="ImportMacro_Click"/>
                <Separator/>
                <MenuItem Header="Quitter" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Profil">
                <MenuItem Header="Nouveau Profil" Click="NewProfile_Click"/>
                <MenuItem Header="Gérer les Profils" Click="ManageProfiles_Click"/>
            </MenuItem>
            <MenuItem Header="Paramètres">
                <MenuItem Header="Configuration" Click="Settings_Click"/>
                <Separator/>
                <MenuItem Header="Journaux (Logs)" Click="ShowLogs_Click"/>
            </MenuItem>
        </Menu>

        <!-- Zone principale -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panneau latéral -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Macros" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <ListBox x:Name="MacrosListBox" 
                             SelectionChanged="MacrosListBox_SelectionChanged"
                             Height="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Gray"/>
                                    <TextBlock x:Name="ShortcutTextBlock" FontSize="9" Foreground="Blue" Margin="0,2,0,0" Loaded="ShortcutTextBlock_Loaded"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="Nouvelle Macro" 
                            Click="NewMacro_Click" 
                            Margin="0,10,0,5"/>
                    <Button Content="Supprimer" 
                            Click="DeleteMacro_Click" 
                            Margin="0,5"/>

                    <Separator Margin="0,20,0,10"/>

                    <TextBlock Text="Profil Actif" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock x:Name="ActiveProfileText" Text="Aucun" Foreground="Gray" Margin="0,0,0,10"/>
                    <Button Content="Changer de Profil" 
                            Click="ChangeProfile_Click"/>

                    <Separator Margin="0,20,0,10"/>

                    <TextBlock Text="État" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock x:Name="EngineStateText" Text="Arrêté" Foreground="Gray"/>
                    <TextBlock x:Name="CPSText" Text="CPS: 0" Margin="0,5,0,0"/>

                    <Separator Margin="0,20,0,10"/>

                    <TextBlock Text="Application Active" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <Border Background="#F0F0F0" CornerRadius="3" Padding="5">
                        <TextBlock x:Name="ActiveAppText" Text="Aucune" Foreground="Gray" FontSize="11" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Zone d'édition -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Barre d'outils -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <Button Content="▶ Exécuter" 
                            x:Name="ExecuteButton"
                            Click="ExecuteMacro_Click" 
                            Padding="10,5" 
                            Margin="0,0,5,0"/>
                    <Button Content="● Enregistrer" 
                            x:Name="StartButton"
                            Click="StartMacro_Click" 
                            Padding="10,5" 
                            Margin="0,0,5,0"/>
                    <CheckBox x:Name="RecordDelaysCheckBox" 
                              Content="Enregistrer les délais" 
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Margin="5,0,5,0"/>
                    <Button Content="⏸ Pause" 
                            x:Name="PauseButton"
                            Click="PauseMacro_Click" 
                            Padding="10,5" 
                            Margin="0,0,5,0"
                            IsEnabled="False"/>
                    <Button Content="⏹ Arrêter" 
                            x:Name="StopButton"
                            Click="StopMacro_Click" 
                            Padding="10,5" 
                            Margin="0,0,5,0"
                            IsEnabled="False"/>
                </StackPanel>

                <!-- Contenu principal -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    
                    <ContentControl x:Name="MacroEditorContainer" Grid.Row="0" Margin="10"/>
                    
                    <!-- Zone d'affichage des actions et zone de test -->
                    <Grid Grid.Row="1" Margin="10,5,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Actions exécutées -->
                        <GroupBox Header="Actions exécutées" Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
                                    <Button Content="Effacer" x:Name="ClearActionsButton" Click="ClearActionsButton_Click" Padding="5,2" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="ActionsCountText" Text="0 action(s)" VerticalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <ListBox x:Name="ActionsListBox" 
                                             SelectionMode="Single"
                                             Background="White"
                                             BorderThickness="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="2">
                                                    <TextBlock Text="{Binding Timestamp}" FontSize="10" Foreground="Gray" Width="80" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="12" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </ScrollViewer>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Zone de test -->
                        <GroupBox Header="Zone de test" Grid.Column="2">
                            <TextBox x:Name="TestTextBox" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     AcceptsTab="False"
                                     VerticalScrollBarVisibility="Auto"
                                     FontSize="14"
                                     Padding="5"
                                     Text="Tapez ici pour tester vos macros..."
                                     GotFocus="TestTextBox_GotFocus"/>
                        </GroupBox>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Barre de statut -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Prêt"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalContentAlignment="Right">
                <TextBlock x:Name="TimeText" Text="00:00:00"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

