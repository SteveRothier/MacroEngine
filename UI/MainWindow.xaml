<Window x:Class="MacroEngine.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="MacroEngine" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="{StaticResource BackgroundPrimaryBrush}">
    <!-- Cadre de la fenêtre (bordure visible en mode restauré) -->
    <Border Background="{StaticResource BackgroundPrimaryBrush}"
            BorderBrush="{StaticResource BorderLightBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ══════════════════════════════════════════════════════════════════
                 BARRE DE TITRE PERSONNALISÉE + TOPBAR (Réduire / Agrandir / Fermer)
                 ══════════════════════════════════════════════════════════════════ -->
            <Border x:Name="TitleBarBorder"
                    Grid.Row="0"
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,0"
                Height="56"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Logo et titre -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Toolbar centrale -->
                    <ColumnDefinition Width="*"/>
                    <!-- Actions droite (menu, paramètres, logs) -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Boutons fenêtre Réduire / Agrandir / Fermer -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo et titre -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Border Width="32" Height="32" 
                            CornerRadius="8" 
                            Background="{StaticResource AccentPrimaryBrush}"
                            Margin="0,0,12,0">
                        <TextBlock Text="&#xE284;" 
                                   FontFamily="{StaticResource FontLucide}"
                                   FontSize="18" 
                                   Foreground="White"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="MacroEngine" 
                               Style="{StaticResource TextHeading}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Actions droite -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    
                    <!-- Menu Fichier (dropdown) -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Header="Fichier" Padding="8,4">
                            <MenuItem Header="Nouvelle Macro" Click="NewMacro_Click"/>
                            <MenuItem Header="Sauvegarder" Click="SaveMacro_Click"/>
                            <Separator/>
                            <MenuItem Header="Exporter..." Click="ExportMacro_Click"/>
                            <MenuItem Header="Importer..." Click="ImportMacro_Click"/>
                            <Separator/>
                            <MenuItem Header="Quitter" Click="Exit_Click"/>
                        </MenuItem>
                        <MenuItem Header="Profil" Padding="8,4">
                            <MenuItem Header="Nouveau Profil" Click="NewProfile_Click"/>
                            <MenuItem Header="Gérer les Profils" Click="ManageProfiles_Click"/>
                        </MenuItem>
                    </Menu>

                    <!-- Séparateur -->
                    <Border Style="{StaticResource SeparatorVertical}" Height="24"/>

                    <!-- Paramètres -->
                    <Button Style="{StaticResource ButtonIcon}"
                            Click="Settings_Click"
                            ToolTip="Paramètres">
                        <TextBlock Text="&#xE30B;" FontFamily="{StaticResource FontLucide}" FontSize="16"/>
                    </Button>

                    <!-- Logs -->
                    <Button Style="{StaticResource ButtonIcon}"
                            Click="ShowLogs_Click"
                            ToolTip="Journaux">
                        <TextBlock Text="&#xE085;" FontFamily="{StaticResource FontLucide}" FontSize="16"/>
                    </Button>
                </StackPanel>

                <!-- Boutons barre de titre : Réduire / Agrandir / Fermer (icônes Lucide) -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Stretch"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button x:Name="MinimizeButton"
                            Style="{StaticResource WindowCaptionButtonStyle}"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            FontFamily="{StaticResource FontLucide}"
                            Content="&#xE11C;"
                            ToolTip="Réduire"
                            Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton"
                            Style="{StaticResource WindowCaptionButtonStyle}"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            FontFamily="{StaticResource FontLucide}"
                            Content="&#xE167;"
                            ToolTip="Agrandir"
                            Click="MaximizeButton_Click"/>
                    <Button x:Name="CloseButton"
                            Style="{StaticResource WindowCaptionCloseButtonStyle}"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            FontFamily="{StaticResource FontLucide}"
                            Content="&#xE1B2;"
                            ToolTip="Fermer"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
            </Border>

            <!-- ══════════════════════════════════════════════════════════════════
                 ZONE PRINCIPALE - Layout 3 colonnes
                 ══════════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="1" Margin="12,12">
            <Grid.ColumnDefinitions>
                <!-- Sidebar gauche -->
                <ColumnDefinition Width="260"/>
                <!-- Espace -->
                <ColumnDefinition Width="12"/>
                <!-- Zone centrale (éditeur) -->
                <ColumnDefinition Width="*"/>
                <!-- Espace -->
                <ColumnDefinition Width="12"/>
                <!-- Panneau propriétés -->
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- ══════════════════════════════════════════════════════════════════
                 SIDEBAR GAUCHE - Macros + Profils
                 ══════════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="0" 
                    Style="{StaticResource PanelCard}"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Titre + Boutons -->
                        <RowDefinition Height="Auto"/>
                        <!-- Boutons Importer/Exporter -->
                        <RowDefinition Height="Auto"/>
                        <!-- Liste des macros + espace restant pour Supprimer / Profils -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Bouton Nouvelle Macro (pleine largeur) -->
                    <Button Grid.Row="0"
                            Style="{StaticResource ButtonSidebarPrimary}"
                            Click="NewMacro_Click"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,12"
                            ToolTip="Nouvelle macro">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="&#xE081;" FontFamily="{StaticResource FontLucide}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Nouvelle Macro" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Boutons Importer/Exporter -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Style="{StaticResource ButtonSidebarSecondary}"
                                Click="ImportMacro_Click"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE0D7;" FontFamily="{StaticResource FontLucide}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Importer" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2"
                                Style="{StaticResource ButtonSidebarSecondary}"
                                Click="ExportMacro_Click"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE19E;" FontFamily="{StaticResource FontLucide}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Exporter" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Liste des macros + espace restant pour Profils -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- Liste des macros : panneau (gradient pourpre/bordeaux, coins 4px, ombre) -->
                        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="228" Height="480" ClipToBounds="False">
                            <Border CornerRadius="0"
                                    Background="{StaticResource MacroColumnBackgroundBrush}"
                                    Margin="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="12" ShadowDepth="2" Direction="270"/>
                                </Border.Effect>
                            </Border>
                            <Border CornerRadius="0"
                                    BorderBrush="#18FFFFFF" BorderThickness="1"
                                    Padding="10,10,10,10" Background="Transparent"
                                    ClipToBounds="False">
                                <ScrollViewer Style="{StaticResource ScrollViewerNoClipStyle}"
                                              VerticalScrollBarVisibility="Hidden"
                                              HorizontalScrollBarVisibility="Disabled"
                                              Padding="0,0,0,12">
                                    <ListBox x:Name="MacrosListBox"
                                             Style="{StaticResource MacrosListBoxStyle}"
                                             SelectionChanged="MacrosListBox_SelectionChanged"
                                             ItemContainerStyle="{StaticResource MacroListItemStyle}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel ClipToBounds="False"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Indicateur activé / désactivé (barre verticale discrète) -->
                                        <Border Grid.Column="0" Width="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,6,0,6" Opacity="0.9">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#404040"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                            <Setter Property="Background" Value="#4A7C4E"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                        
                                        <!-- Nom de la macro -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                                        
                                        <!-- Raccourci = encadrement blanc -->
                                        <Border Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Margin="6,0,0,0"
                                                Padding="4,0,4,2"
                                                BorderBrush="White"
                                                BorderThickness="1"
                                                Background="Transparent"
                                                Visibility="{Binding ShortcutKeyCode, Converter={StaticResource ShortcutVisibilityConverter}}">
                                            <TextBlock FontSize="10" FontWeight="SemiBold"
                                                       Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"
                                                       Text="{Binding ShortcutKeyCode, Converter={StaticResource KeyCodeToNameConverter}}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                                    </ListBox>
                                </ScrollViewer>
                            </Border>
                        </Grid>

                        <!-- Espace restant : Supprimer + Séparateur + Profils -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,12,0,0">
                            <Button Style="{StaticResource ButtonGhost}"
                                    Click="DeleteMacro_Click"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE18E;" FontFamily="{StaticResource FontLucide}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Supprimer" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Border Style="{StaticResource SeparatorHorizontal}"
                                    Margin="0,0,0,12"/>
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Profil actif" 
                                               Style="{StaticResource TextSubheading}"
                                               VerticalAlignment="Center"/>
                                    <Button Grid.Column="1"
                                            Style="{StaticResource ButtonGhost}"
                                            Click="ManageProfiles_Click"
                                            Padding="4"
                                            ToolTip="Gérer les profils"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="&#xE30B;" 
                                                   FontFamily="{StaticResource FontLucide}" 
                                                   FontSize="14"/>
                                    </Button>
                                </Grid>
                                <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                        CornerRadius="8"
                                        Padding="12,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="ActiveProfileText" 
                                                   Text="Aucun" 
                                                   Style="{StaticResource TextBody}"
                                                   VerticalAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Content="Changer"
                                                Style="{StaticResource ButtonGhost}"
                                                Click="ChangeProfile_Click"
                                                Padding="8,4"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- ══════════════════════════════════════════════════════════════════
                 ZONE CENTRALE - Éditeur de macros
                 ══════════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="2" 
                    Style="{StaticResource PanelCard}"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition x:Name="BottomPanelRow" Height="180"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Éditeur de macro -->
                    <ContentControl x:Name="MacroEditorContainer" Grid.Row="0" Margin="12"/>
                    
                    <!-- Zone d'affichage des actions et zone de test -->
                    <Grid Grid.Row="1" Margin="12,0,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Actions exécutées -->
                        <Border x:Name="ActionsPanelBorder" Grid.Column="0" 
                                Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="10"
                                Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Actions exécutées" 
                                               Style="{StaticResource TextSecondary}"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ActionsCountText" 
                                               Text=" (0)" 
                                               Style="{StaticResource TextMuted}"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"/>
                                    <Button Content="Effacer" 
                                            x:Name="ClearActionsButton" 
                                            Style="{StaticResource ButtonGhost}"
                                            Click="ClearActionsButton_Click" 
                                            Padding="8,4"
                                            Margin="12,0,0,0"/>
                                </StackPanel>
                                <ListBox x:Name="ActionsListBox" 
                                         Grid.Row="1"
                                         SelectionMode="Single"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <TextBlock Text="{Binding Timestamp}" 
                                                           Style="{StaticResource TextMuted}"
                                                           Width="70"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Style="{StaticResource TextSecondary}"
                                                           Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                        <!-- Zone de test -->
                        <Border x:Name="TestPanelBorder" Grid.Column="2" 
                                Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="10"
                                Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Zone de test" 
                                           Style="{StaticResource TextSecondary}"
                                           FontWeight="Medium"
                                           Margin="0,0,0,2"/>
                                <TextBox x:Name="TestTextBox" 
                                         Grid.Row="1"
                                         Style="{StaticResource TextBoxModern}"
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         AcceptsTab="False"
                                         VerticalScrollBarVisibility="Auto"
                                         Text="Tapez ici pour tester vos macros..."
                                         GotFocus="TestTextBox_GotFocus"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- ══════════════════════════════════════════════════════════════════
                 PANNEAU PROPRIÉTÉS - Droite (Macro sélectionnée)
                 ══════════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="4" 
                    Style="{StaticResource PanelCard}"
                    Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Titre -->
                        <TextBlock Text="Propriétés" 
                                   Style="{StaticResource TextSubheading}"
                                   Margin="0,0,0,10"/>

                        <!-- Nom de la macro -->
                        <TextBlock Text="Nom" Style="{StaticResource TextLabel}"/>
                        <TextBox x:Name="MacroNameTextBox"
                                 Style="{StaticResource TextBoxModern}"
                                 TextChanged="MacroNameTextBox_TextChanged"
                                 Margin="0,0,0,6"/>

                        <!-- Description -->
                        <TextBlock Text="Description" Style="{StaticResource TextLabel}"/>
                        <TextBox x:Name="MacroDescriptionTextBox"
                                 Style="{StaticResource TextBoxModern}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="60"
                                 TextChanged="MacroDescriptionTextBox_TextChanged"
                                 Margin="0,0,0,6"/>

                        <!-- Résumé de la macro (ce qu'elle fait) -->
                        <TextBlock Text="Résumé" Style="{StaticResource TextLabel}"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="6"
                                Padding="10,8"
                                Margin="0,0,0,6">
                            <TextBlock x:Name="MacroSummaryText"
                                       Text="Aucune action"
                                       Style="{StaticResource TextMuted}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       MaxHeight="80"
                                       TextTrimming="CharacterEllipsis"/>
                        </Border>

                        <!-- Raccourci clavier -->
                        <TextBlock Text="Raccourci clavier" Style="{StaticResource TextLabel}"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                    CornerRadius="8"
                                    Padding="12,10">
                                <TextBlock x:Name="ShortcutDisplayText" 
                                           Text="Non défini"
                                           Style="{StaticResource TextMono}"/>
                            </Border>
                            <Button Grid.Column="1"
                                    Content="Définir"
                                    Style="{StaticResource ButtonGhost}"
                                    Click="SetShortcut_Click"
                                    Margin="8,0,0,0"
                                    Padding="12,8"/>
                        </Grid>

                        <!-- Applications cibles -->
                        <TextBlock Text="Applications cibles" Style="{StaticResource TextLabel}"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,10"
                                MinHeight="40"
                                Margin="0,0,0,8">
                            <WrapPanel x:Name="TargetAppsPanel">
                                <TextBlock x:Name="NoAppsText" 
                                           Text="Toutes les applications" 
                                           Style="{StaticResource TextMuted}"/>
                            </WrapPanel>
                        </Border>
                        <Button Content="Sélectionner..."
                                Style="{StaticResource ButtonGhost}"
                                Click="SelectApps_Click"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,12"/>

                        <!-- Surveillance continue -->
                        <CheckBox x:Name="ContinuousMonitoringCheckBox"
                                  Content="Surveillance continue"
                                  Style="{StaticResource CheckBoxModern}"
                                  Checked="ContinuousMonitoringCheckBox_Changed"
                                  Unchecked="ContinuousMonitoringCheckBox_Changed"
                                  Margin="0,0,0,6"
                                  ToolTip="La macro s'exécute en boucle et réévalue les conditions (If) en continu. Utile pour réagir dès qu'une condition est remplie."/>
                        <StackPanel x:Name="ContinuousMonitoringOptionsPanel" Visibility="Collapsed" Margin="24,0,0,12">
                            <TextBlock Text="Intervalle (ms)" Style="{StaticResource TextLabel}" Margin="0,0,0,4"/>
                            <TextBox x:Name="ContinuousMonitoringIntervalTextBox"
                                     Style="{StaticResource TextBoxModern}"
                                     Width="80"
                                     HorizontalAlignment="Left"
                                     Text="200"
                                     TextChanged="ContinuousMonitoringInterval_TextChanged"/>
                        </StackPanel>

                        <Border Style="{StaticResource SeparatorHorizontal}"/>

                        <!-- État du moteur -->
                        <TextBlock Text="État" Style="{StaticResource TextLabel}" Margin="0,8,0,0"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EngineStateText" 
                                           Text="Prêt" 
                                           Foreground="{StaticResource SuccessBrush}"
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="CPSText" 
                                           Grid.Column="1"
                                           Text="0 CPS" 
                                           Style="{StaticResource TextMono}"/>
                            </Grid>
                        </Border>

                        <!-- Application active -->
                        <TextBlock Text="Application active" Style="{StaticResource TextLabel}"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,8">
                            <TextBlock x:Name="ActiveAppText" 
                                       Text="Aucune" 
                                       Style="{StaticResource TextMuted}"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            </Grid>

            <!-- ══════════════════════════════════════════════════════════════════
                 STATUSBAR - Barre de statut
                 ══════════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="2"
                    Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="16,0"
                    Height="28">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Message de statut -->
                    <TextBlock x:Name="StatusText"
                               Text="Prêt"
                               Style="{StaticResource TextSecondary}"
                               VerticalAlignment="Center"/>

                    <!-- Heure -->
                    <TextBlock x:Name="TimeText"
                               Grid.Column="1"
                               Text="00:00:00"
                               Style="{StaticResource TextMono}"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

