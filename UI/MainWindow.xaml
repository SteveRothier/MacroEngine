<Window x:Class="MacroEngine.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MacroEngine" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundPrimaryBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             TOPBAR - Barre supÃ©rieure moderne
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,0"
                Height="56">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Logo et titre -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Toolbar centrale -->
                    <ColumnDefinition Width="*"/>
                    <!-- Actions droite -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo et titre -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Border Width="32" Height="32" 
                            CornerRadius="8" 
                            Background="{StaticResource AccentPrimaryBrush}"
                            Margin="0,0,12,0">
                        <TextBlock Text="âŒ¨" 
                                   FontSize="18" 
                                   Foreground="White"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="MacroEngine" 
                               Style="{StaticResource TextHeading}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Toolbar centrale - Enregistrement et exÃ©cution -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    
                    <!-- Bouton ExÃ©cuter -->
                    <Button x:Name="ExecuteButton"
                            Style="{StaticResource ButtonSecondary}"
                            Click="ExecuteMacro_Click"
                            Padding="14,8"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â–¶" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="ExÃ©cuter" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Bouton Enregistrer -->
                    <Button x:Name="StartButton"
                            Style="{StaticResource ButtonPrimary}"
                            Click="StartMacro_Click"
                            Padding="14,8"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Enregistrer" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Bouton Pause -->
                    <Button x:Name="PauseButton"
                            Style="{StaticResource ButtonGhost}"
                            Click="PauseMacro_Click"
                            Padding="10,8"
                            Margin="0,0,4,0"
                            IsEnabled="False"
                            ToolTip="Pause">
                        <TextBlock Text="â¸" FontSize="14"/>
                    </Button>

                    <!-- Bouton ArrÃªter -->
                    <Button x:Name="StopButton"
                            Style="{StaticResource ButtonGhost}"
                            Click="StopMacro_Click"
                            Padding="10,8"
                            Margin="0,0,12,0"
                            IsEnabled="False"
                            ToolTip="ArrÃªter">
                        <TextBlock Text="â¹" FontSize="14"/>
                    </Button>

                    <!-- SÃ©parateur -->
                    <Border Style="{StaticResource SeparatorVertical}" Height="24"/>

                    <!-- Options d'enregistrement -->
                    <CheckBox x:Name="RecordDelaysCheckBox" 
                              Content="DÃ©lais" 
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="8,0"/>
                    <CheckBox x:Name="RecordMouseClicksCheckBox" 
                              Content="Clics" 
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="8,0"
                              ToolTip="Enregistrer les clics souris"/>
                    <CheckBox x:Name="RecordMouseMovesCheckBox" 
                              Content="Mouvements" 
                              IsChecked="False"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="8,0"
                              ToolTip="Enregistrer les dÃ©placements souris"/>
                </StackPanel>

                <!-- Actions droite -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    
                    <!-- Menu Fichier (dropdown) -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Header="Fichier" Padding="8,4">
                            <MenuItem Header="Nouvelle Macro" Click="NewMacro_Click"/>
                            <MenuItem Header="Sauvegarder" Click="SaveMacro_Click"/>
                            <Separator/>
                            <MenuItem Header="Exporter..." Click="ExportMacro_Click"/>
                            <MenuItem Header="Importer..." Click="ImportMacro_Click"/>
                            <Separator/>
                            <MenuItem Header="Quitter" Click="Exit_Click"/>
                        </MenuItem>
                        <MenuItem Header="Profil" Padding="8,4">
                            <MenuItem Header="Nouveau Profil" Click="NewProfile_Click"/>
                            <MenuItem Header="GÃ©rer les Profils" Click="ManageProfiles_Click"/>
                        </MenuItem>
                    </Menu>

                    <!-- SÃ©parateur -->
                    <Border Style="{StaticResource SeparatorVertical}" Height="24"/>

                    <!-- ParamÃ¨tres -->
                    <Button Style="{StaticResource ButtonIcon}"
                            Click="Settings_Click"
                            ToolTip="ParamÃ¨tres">
                        <TextBlock Text="âš™" FontSize="16"/>
                    </Button>

                    <!-- Logs -->
                    <Button Style="{StaticResource ButtonIcon}"
                            Click="ShowLogs_Click"
                            ToolTip="Journaux">
                        <TextBlock Text="ðŸ“‹" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             ZONE PRINCIPALE - Layout 3 colonnes
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="1" Margin="12,8">
            <Grid.ColumnDefinitions>
                <!-- Sidebar gauche -->
                <ColumnDefinition Width="260"/>
                <!-- Espace -->
                <ColumnDefinition Width="12"/>
                <!-- Zone centrale (Ã©diteur) -->
                <ColumnDefinition Width="*"/>
                <!-- Espace -->
                <ColumnDefinition Width="12"/>
                <!-- Panneau propriÃ©tÃ©s -->
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 SIDEBAR GAUCHE - Liste des macros
                 â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="0" 
                    Style="{StaticResource PanelCard}"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Titre -->
                        <RowDefinition Height="Auto"/>
                        <!-- Liste des macros -->
                        <RowDefinition Height="*"/>
                        <!-- Boutons -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Titre -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Mes Macros" Style="{StaticResource TextSubheading}"/>
                    </StackPanel>

                    <!-- Liste des macros -->
                    <ListBox Grid.Row="1"
                             x:Name="MacrosListBox" 
                             SelectionChanged="MacrosListBox_SelectionChanged"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="Margin" Value="0,4,0,0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd"
                                                    Background="{StaticResource BackgroundPrimaryBrush}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" 
                                                            Value="{StaticResource BackgroundTertiaryBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" 
                                                            Value="{StaticResource AccentPrimaryBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold"
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="12" 
                                               Opacity="0.7"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0"/>
                                    <TextBlock x:Name="ShortcutTextBlock" 
                                               FontSize="11" 
                                               Foreground="{StaticResource AccentSecondaryBrush}"
                                               Margin="0,4,0,0"
                                               Loaded="ShortcutTextBlock_Loaded"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Boutons -->
                    <StackPanel Grid.Row="2" Margin="0,12,0,0">
                        <Button Content="ï¼‹ Nouvelle Macro"
                                Style="{StaticResource ButtonPrimary}"
                                Click="NewMacro_Click"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Supprimer"
                                Style="{StaticResource ButtonGhost}"
                                Click="DeleteMacro_Click"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 ZONE CENTRALE - Ã‰diteur de macros
                 â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="2" 
                    Style="{StaticResource PanelCard}"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="180"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Ã‰diteur de macro -->
                    <ContentControl x:Name="MacroEditorContainer" Grid.Row="0" Margin="12"/>
                    
                    <!-- Zone d'affichage des actions et zone de test -->
                    <Grid Grid.Row="1" Margin="12,0,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Actions exÃ©cutÃ©es -->
                        <Border Grid.Column="0" 
                                Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="10"
                                Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Actions exÃ©cutÃ©es" 
                                               Style="{StaticResource TextSecondary}"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ActionsCountText" 
                                               Text=" (0)" 
                                               Style="{StaticResource TextMuted}"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"/>
                                    <Button Content="Effacer" 
                                            x:Name="ClearActionsButton" 
                                            Style="{StaticResource ButtonGhost}"
                                            Click="ClearActionsButton_Click" 
                                            Padding="8,4"
                                            Margin="12,0,0,0"/>
                                </StackPanel>
                                <ListBox x:Name="ActionsListBox" 
                                         Grid.Row="1"
                                         SelectionMode="Single"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <TextBlock Text="{Binding Timestamp}" 
                                                           Style="{StaticResource TextMuted}"
                                                           Width="70"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Style="{StaticResource TextSecondary}"
                                                           Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                        <!-- Zone de test -->
                        <Border Grid.Column="2" 
                                Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="10"
                                Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Zone de test" 
                                           Style="{StaticResource TextSecondary}"
                                           FontWeight="Medium"
                                           Margin="0,0,0,8"/>
                                <TextBox x:Name="TestTextBox" 
                                         Grid.Row="1"
                                         Style="{StaticResource TextBoxModern}"
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         AcceptsTab="False"
                                         VerticalScrollBarVisibility="Auto"
                                         Text="Tapez ici pour tester vos macros..."
                                         GotFocus="TestTextBox_GotFocus"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 PANNEAU PROPRIÃ‰TÃ‰S - Droite
                 â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="4" 
                    Style="{StaticResource PanelCard}"
                    Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Titre -->
                        <TextBlock Text="PropriÃ©tÃ©s" 
                                   Style="{StaticResource TextSubheading}"
                                   Margin="0,0,0,16"/>

                        <!-- Ã‰tat du moteur -->
                        <TextBlock Text="Ã‰tat" Style="{StaticResource TextLabel}"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EngineStateText" 
                                           Text="PrÃªt" 
                                           Foreground="{StaticResource SuccessBrush}"
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="CPSText" 
                                           Grid.Column="1"
                                           Text="0 CPS" 
                                           Style="{StaticResource TextMono}"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource SeparatorHorizontal}"/>

                        <!-- Profil actif -->
                        <TextBlock Text="Profil actif" Style="{StaticResource TextLabel}" Margin="0,8,0,0"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,0,0,8">
                            <TextBlock x:Name="ActiveProfileText" 
                                       Text="Aucun" 
                                       Style="{StaticResource TextMuted}"/>
                        </Border>
                        <Button Content="Changer de Profil" 
                                Style="{StaticResource ButtonSecondary}"
                                Click="ChangeProfile_Click"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16"/>

                        <Border Style="{StaticResource SeparatorHorizontal}"/>

                        <!-- Application active -->
                        <TextBlock Text="Application active" Style="{StaticResource TextLabel}" Margin="0,8,0,0"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,0,0,16">
                            <TextBlock x:Name="ActiveAppText" 
                                       Text="Aucune" 
                                       Style="{StaticResource TextMuted}"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             STATUSBAR - Barre de statut
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,0"
                Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message de statut -->
                <TextBlock x:Name="StatusText" 
                           Text="PrÃªt"
                           Style="{StaticResource TextSecondary}"
                           VerticalAlignment="Center"/>

                <!-- Heure -->
                <TextBlock x:Name="TimeText" 
                           Grid.Column="1"
                           Text="00:00:00" 
                           Style="{StaticResource TextMono}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>

