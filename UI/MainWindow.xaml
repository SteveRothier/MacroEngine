<Window x:Class="MacroEngine.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MacroEngine" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundPrimaryBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             TOPBAR - Barre supÃ©rieure moderne
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,0"
                Height="56">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Logo et titre -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Toolbar centrale -->
                    <ColumnDefinition Width="*"/>
                    <!-- Actions droite -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo et titre -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Border Width="32" Height="32" 
                            CornerRadius="8" 
                            Background="{StaticResource AccentPrimaryBrush}"
                            Margin="0,0,12,0">
                        <TextBlock Text="âŒ¨" 
                                   FontSize="18" 
                                   Foreground="White"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="MacroEngine" 
                               Style="{StaticResource TextHeading}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Toolbar centrale - Enregistrement et exÃ©cution -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    
                    <!-- Bouton ExÃ©cuter -->
                    <Button x:Name="ExecuteButton"
                            Style="{StaticResource ButtonSecondary}"
                            Click="ExecuteMacro_Click"
                            Padding="14,8"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â–¶" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="ExÃ©cuter" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Bouton Enregistrer -->
                    <Button x:Name="StartButton"
                            Style="{StaticResource ButtonPrimary}"
                            Click="StartMacro_Click"
                            Padding="14,8"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Enregistrer" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Bouton Pause -->
                    <Button x:Name="PauseButton"
                            Style="{StaticResource ButtonGhost}"
                            Click="PauseMacro_Click"
                            Padding="10,8"
                            Margin="0,0,4,0"
                            IsEnabled="False"
                            ToolTip="Pause">
                        <TextBlock Text="â¸" FontSize="14"/>
                    </Button>

                    <!-- Bouton ArrÃªter -->
                    <Button x:Name="StopButton"
                            Style="{StaticResource ButtonGhost}"
                            Click="StopMacro_Click"
                            Padding="10,8"
                            Margin="0,0,12,0"
                            IsEnabled="False"
                            ToolTip="ArrÃªter">
                        <TextBlock Text="â¹" FontSize="14"/>
                    </Button>

                    <!-- SÃ©parateur -->
                    <Border Style="{StaticResource SeparatorVertical}" Height="24"/>

                    <!-- Options d'enregistrement -->
                    <CheckBox x:Name="RecordDelaysCheckBox" 
                              Content="DÃ©lais" 
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="8,0"/>
                    <CheckBox x:Name="RecordMouseClicksCheckBox" 
                              Content="Clics" 
                              IsChecked="True"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="8,0"
                              ToolTip="Enregistrer les clics souris"/>
                    <CheckBox x:Name="RecordMouseMovesCheckBox" 
                              Content="Mouvements" 
                              IsChecked="False"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="8,0"
                              ToolTip="Enregistrer les dÃ©placements souris"/>
                </StackPanel>

                <!-- Actions droite -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    
                    <!-- Menu Fichier (dropdown) -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Header="Fichier" Padding="8,4">
                            <MenuItem Header="Nouvelle Macro" Click="NewMacro_Click"/>
                            <MenuItem Header="Sauvegarder" Click="SaveMacro_Click"/>
                            <Separator/>
                            <MenuItem Header="Exporter..." Click="ExportMacro_Click"/>
                            <MenuItem Header="Importer..." Click="ImportMacro_Click"/>
                            <Separator/>
                            <MenuItem Header="Quitter" Click="Exit_Click"/>
                        </MenuItem>
                        <MenuItem Header="Profil" Padding="8,4">
                            <MenuItem Header="Nouveau Profil" Click="NewProfile_Click"/>
                            <MenuItem Header="GÃ©rer les Profils" Click="ManageProfiles_Click"/>
                        </MenuItem>
                    </Menu>

                    <!-- SÃ©parateur -->
                    <Border Style="{StaticResource SeparatorVertical}" Height="24"/>

                    <!-- ParamÃ¨tres -->
                    <Button Style="{StaticResource ButtonIcon}"
                            Click="Settings_Click"
                            ToolTip="ParamÃ¨tres">
                        <TextBlock Text="âš™" FontSize="16"/>
                    </Button>

                    <!-- Logs -->
                    <Button Style="{StaticResource ButtonIcon}"
                            Click="ShowLogs_Click"
                            ToolTip="Journaux">
                        <TextBlock Text="ðŸ“‹" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             ZONE PRINCIPALE - Layout 3 colonnes
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="1" Margin="12,8">
            <Grid.ColumnDefinitions>
                <!-- Sidebar gauche -->
                <ColumnDefinition Width="260"/>
                <!-- Espace -->
                <ColumnDefinition Width="12"/>
                <!-- Zone centrale (Ã©diteur) -->
                <ColumnDefinition Width="*"/>
                <!-- Espace -->
                <ColumnDefinition Width="12"/>
                <!-- Panneau propriÃ©tÃ©s -->
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 SIDEBAR GAUCHE - Macros + Profils
                 â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="0" 
                    Style="{StaticResource PanelCard}"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Titre + Boutons -->
                        <RowDefinition Height="Auto"/>
                        <!-- Boutons Importer/Exporter -->
                        <RowDefinition Height="Auto"/>
                        <!-- Liste des macros -->
                        <RowDefinition Height="*"/>
                        <!-- Bouton Supprimer -->
                        <RowDefinition Height="Auto"/>
                        <!-- SÃ©parateur -->
                        <RowDefinition Height="Auto"/>
                        <!-- Section Profils -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Bouton Nouvelle Macro (pleine largeur) -->
                    <Button Grid.Row="0"
                            Style="{StaticResource ButtonSidebarPrimary}"
                            Click="NewMacro_Click"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,12"
                            ToolTip="Nouvelle macro">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="âž•" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Nouvelle Macro" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Boutons Importer/Exporter -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Style="{StaticResource ButtonSidebarSecondary}"
                                Click="ImportMacro_Click"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“‚" Margin="0,0,6,0"/>
                                <TextBlock Text="Importer"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2"
                                Style="{StaticResource ButtonSidebarSecondary}"
                                Click="ExportMacro_Click"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“¤" Margin="0,0,6,0"/>
                                <TextBlock Text="Exporter"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Liste des macros -->
                    <Border Grid.Row="2"
                            Background="{StaticResource BackgroundPrimaryBrush}"
                            BorderBrush="{StaticResource BorderLightBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8">
                        <ListBox x:Name="MacrosListBox" 
                                 SelectionChanged="MacrosListBox_SelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource MacroListItemStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Nom de la macro -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                                        
                                        <!-- Point d'Ã©tat (ActivÃ©/DÃ©sactivÃ©) -->
                                        <Ellipse Grid.Column="1"
                                                 Style="{StaticResource StatusDotStyle}"/>
                                        
                                        <!-- Badge de raccourci clavier (compact) -->
                                        <TextBlock Grid.Column="2"
                                                   FontSize="10"
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="6,0,0,0"
                                                   Visibility="{Binding ShortcutKeyCode, Converter={StaticResource ShortcutVisibilityConverter}}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="âŒ¨ {0}">
                                                    <Binding Path="ShortcutKeyCode" Converter="{StaticResource KeyCodeToNameConverter}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Bouton Supprimer -->
                    <Button Grid.Row="3"
                            Content="ðŸ—‘ Supprimer"
                            Style="{StaticResource ButtonGhost}"
                            Click="DeleteMacro_Click"
                            HorizontalAlignment="Stretch"
                            Margin="0,8,0,0"/>

                    <!-- SÃ©parateur -->
                    <Border Grid.Row="4" 
                            Style="{StaticResource SeparatorHorizontal}"
                            Margin="0,16,0,8"/>

                    <!-- Section Profils -->
                    <StackPanel Grid.Row="5">
                        <TextBlock Text="Profil actif" 
                                   Style="{StaticResource TextSubheading}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ActiveProfileText" 
                                           Text="Aucun" 
                                           Style="{StaticResource TextBody}"
                                           VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                        Content="Changer"
                                        Style="{StaticResource ButtonGhost}"
                                        Click="ChangeProfile_Click"
                                        Padding="8,4"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 ZONE CENTRALE - Ã‰diteur de macros
                 â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="2" 
                    Style="{StaticResource PanelCard}"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="180"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Ã‰diteur de macro -->
                    <ContentControl x:Name="MacroEditorContainer" Grid.Row="0" Margin="12"/>
                    
                    <!-- Zone d'affichage des actions et zone de test -->
                    <Grid Grid.Row="1" Margin="12,0,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Actions exÃ©cutÃ©es -->
                        <Border Grid.Column="0" 
                                Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="10"
                                Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Actions exÃ©cutÃ©es" 
                                               Style="{StaticResource TextSecondary}"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ActionsCountText" 
                                               Text=" (0)" 
                                               Style="{StaticResource TextMuted}"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"/>
                                    <Button Content="Effacer" 
                                            x:Name="ClearActionsButton" 
                                            Style="{StaticResource ButtonGhost}"
                                            Click="ClearActionsButton_Click" 
                                            Padding="8,4"
                                            Margin="12,0,0,0"/>
                                </StackPanel>
                                <ListBox x:Name="ActionsListBox" 
                                         Grid.Row="1"
                                         SelectionMode="Single"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <TextBlock Text="{Binding Timestamp}" 
                                                           Style="{StaticResource TextMuted}"
                                                           Width="70"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Style="{StaticResource TextSecondary}"
                                                           Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                        <!-- Zone de test -->
                        <Border Grid.Column="2" 
                                Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="10"
                                Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Zone de test" 
                                           Style="{StaticResource TextSecondary}"
                                           FontWeight="Medium"
                                           Margin="0,0,0,8"/>
                                <TextBox x:Name="TestTextBox" 
                                         Grid.Row="1"
                                         Style="{StaticResource TextBoxModern}"
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         AcceptsTab="False"
                                         VerticalScrollBarVisibility="Auto"
                                         Text="Tapez ici pour tester vos macros..."
                                         GotFocus="TestTextBox_GotFocus"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 PANNEAU PROPRIÃ‰TÃ‰S - Droite (Macro sÃ©lectionnÃ©e)
                 â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="4" 
                    Style="{StaticResource PanelCard}"
                    Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Titre -->
                        <TextBlock Text="PropriÃ©tÃ©s" 
                                   Style="{StaticResource TextSubheading}"
                                   Margin="0,0,0,16"/>

                        <!-- Nom de la macro -->
                        <TextBlock Text="Nom" Style="{StaticResource TextLabel}"/>
                        <TextBox x:Name="MacroNameTextBox"
                                 Style="{StaticResource TextBoxModern}"
                                 TextChanged="MacroNameTextBox_TextChanged"
                                 Margin="0,0,0,12"/>

                        <!-- Description -->
                        <TextBlock Text="Description" Style="{StaticResource TextLabel}"/>
                        <TextBox x:Name="MacroDescriptionTextBox"
                                 Style="{StaticResource TextBoxModern}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="60"
                                 TextChanged="MacroDescriptionTextBox_TextChanged"
                                 Margin="0,0,0,12"/>

                        <!-- Raccourci clavier -->
                        <TextBlock Text="Raccourci clavier" Style="{StaticResource TextLabel}"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                    CornerRadius="8"
                                    Padding="12,10">
                                <TextBlock x:Name="ShortcutDisplayText" 
                                           Text="Non dÃ©fini"
                                           Style="{StaticResource TextMono}"/>
                            </Border>
                            <Button Grid.Column="1"
                                    Content="DÃ©finir"
                                    Style="{StaticResource ButtonGhost}"
                                    Click="SetShortcut_Click"
                                    Margin="8,0,0,0"
                                    Padding="12,8"/>
                        </Grid>

                        <!-- Applications cibles -->
                        <TextBlock Text="Applications cibles" Style="{StaticResource TextLabel}"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,10"
                                MinHeight="40"
                                Margin="0,0,0,8">
                            <WrapPanel x:Name="TargetAppsPanel">
                                <TextBlock x:Name="NoAppsText" 
                                           Text="Toutes les applications" 
                                           Style="{StaticResource TextMuted}"/>
                            </WrapPanel>
                        </Border>
                        <Button Content="SÃ©lectionner..."
                                Style="{StaticResource ButtonGhost}"
                                Click="SelectApps_Click"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,16"/>

                        <Border Style="{StaticResource SeparatorHorizontal}"/>

                        <!-- Ã‰tat du moteur -->
                        <TextBlock Text="Ã‰tat" Style="{StaticResource TextLabel}" Margin="0,8,0,0"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EngineStateText" 
                                           Text="PrÃªt" 
                                           Foreground="{StaticResource SuccessBrush}"
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="CPSText" 
                                           Grid.Column="1"
                                           Text="0 CPS" 
                                           Style="{StaticResource TextMono}"/>
                            </Grid>
                        </Border>

                        <!-- Application active -->
                        <TextBlock Text="Application active" Style="{StaticResource TextLabel}"/>
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="8"
                                Padding="12,8">
                            <TextBlock x:Name="ActiveAppText" 
                                       Text="Aucune" 
                                       Style="{StaticResource TextMuted}"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             STATUSBAR - Barre de statut
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,0"
                Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message de statut -->
                <TextBlock x:Name="StatusText" 
                           Text="PrÃªt"
                           Style="{StaticResource TextSecondary}"
                           VerticalAlignment="Center"/>

                <!-- Heure -->
                <TextBlock x:Name="TimeText" 
                           Grid.Column="1"
                           Text="00:00:00" 
                           Style="{StaticResource TextMono}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>

