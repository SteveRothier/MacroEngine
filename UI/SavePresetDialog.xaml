<Window x:Class="MacroEngine.UI.SavePresetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sauvegarder comme Preset"
        Width="450"
        Height="320"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundPrimaryBrush}"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE0B2;" FontFamily="{StaticResource FontLucide}" FontSize="18" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock Text="Nouveau Preset" Style="{StaticResource TextHeading}" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock x:Name="SavePresetTitleText" Visibility="Collapsed"
                       Style="{StaticResource TextHeading}"
                       FontSize="18"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Donnez un nom à ce preset pour le réutiliser facilement"
                       Style="{StaticResource TextMuted}"
                       FontSize="13"/>
        </StackPanel>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <!-- Nom du preset -->
            <TextBlock Text="Nom du preset *"
                       Style="{StaticResource TextBody}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="PresetNameTextBox"
                     Style="{StaticResource TextBoxModern}"
                     FontSize="13"
                     Margin="0,0,0,16"
                     Text="Mon action"/>

            <!-- Catégorie -->
            <TextBlock Text="Catégorie"
                       Style="{StaticResource TextBody}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>
            <ComboBox x:Name="CategoryComboBox"
                      Style="{StaticResource ComboBoxModern}"
                      IsEditable="True"
                      SelectedIndex="0"
                      Margin="0,0,0,16">
                <ComboBoxItem Content="Général"/>
                <ComboBoxItem Content="Clavier"/>
                <ComboBoxItem Content="Souris"/>
                <ComboBoxItem Content="Délais"/>
                <ComboBoxItem Content="Conditions"/>
                <ComboBoxItem Content="Boucles"/>
                <ComboBoxItem Content="Texte"/>
                <ComboBoxItem Content="Variables"/>
            </ComboBox>

            <!-- Description (optionnelle) -->
            <TextBlock Text="Description (optionnel)"
                       Style="{StaticResource TextBody}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="DescriptionTextBox"
                     Style="{StaticResource TextBoxModern}"
                     FontSize="13"
                     Height="60"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler"
                    Style="{StaticResource ButtonSecondary}"
                    ClickMode="Press"
                    Focusable="False"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button Content="Sauvegarder"
                    Style="{StaticResource ButtonPrimary}"
                    ClickMode="Press"
                    Focusable="False"
                    Width="120"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
