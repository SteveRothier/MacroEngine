<UserControl x:Class="MacroEngine.UI.MacroEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Ã‰diteur de Macro Clavier" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nom:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="MacroNameTextBox" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Description:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="MacroDescriptionTextBox" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Height="60"/>
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Raccourci:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="ShortcutKeyTextBox" 
                         Grid.Column="1"
                         IsReadOnly="True"
                         PreviewKeyDown="ShortcutKeyTextBox_PreviewKeyDown"
                         KeyDown="ShortcutKeyTextBox_KeyDown"
                         GotFocus="ShortcutKeyTextBox_GotFocus"
                         LostFocus="ShortcutKeyTextBox_LostFocus"
                         Margin="0,0,10,0"/>
                <Button x:Name="CaptureShortcutKeyButton" 
                        Grid.Column="2"
                        Content="Modifier"
                        Click="CaptureShortcutKeyButton_Click"
                        Width="80"/>
            </Grid>
            
            <!-- Applications cibles -->
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Ligne 1: SÃ©lection rapide via ComboBox -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Applications:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="ApplicationsComboBox" 
                              Grid.Column="1"
                              DropDownOpened="ApplicationsComboBox_DropDownOpened"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              IsTextSearchCaseSensitive="False"
                              TextSearch.TextPath="ProcessName"
                              StaysOpenOnEdit="True">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <Image Source="{Binding Icon}" 
                                           Width="16" Height="16" 
                                           Margin="0,0,8,0"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding ProcessName}" 
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text=" - " 
                                               Foreground="Gray"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding WindowTitle}" 
                                               Foreground="Gray"
                                               VerticalAlignment="Center"
                                               MaxWidth="250"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Grid.Column="2"
                            Content="âž• Ajouter"
                            Click="AddSelectedApp_Click"
                            Padding="10,3"
                            Margin="5,0,0,0"/>
                    <Button Grid.Column="3"
                            Content="ðŸ”„"
                            Click="RefreshAppsComboBox_Click"
                            Padding="5,3"
                            Margin="5,0,0,0"
                            ToolTip="Actualiser la liste des applications"/>
                </Grid>
                
                <!-- Ligne 2: Applications sÃ©lectionnÃ©es -->
                <Grid Grid.Row="1" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cibles:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Gray"/>
                    <Border Grid.Column="1" 
                            BorderBrush="LightGray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Background="#FAFAFA"
                            MinHeight="26">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Disabled"
                                      Padding="3">
                            <WrapPanel x:Name="TargetAppsPanel" Orientation="Horizontal">
                                <TextBlock x:Name="NoAppsText" 
                                           Text="Toutes les applications" 
                                           Foreground="Gray" 
                                           FontStyle="Italic"
                                           VerticalAlignment="Center"/>
                            </WrapPanel>
                        </ScrollViewer>
                    </Border>
                    <Button x:Name="ClearAppsButton" 
                            Grid.Column="2"
                            Content="âœ• Effacer tout"
                            Click="ClearAllApps_Click"
                            Padding="8,3"
                            Margin="5,0,0,0"/>
                </Grid>
            </Grid>
        </StackPanel>

        <!-- Liste des actions -->
        <DataGrid x:Name="ActionsDataGrid" 
                  Grid.Row="1" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  PreviewKeyDown="ActionsDataGrid_PreviewKeyDown"
                  CellEditEnding="ActionsDataGrid_CellEditEnding"
                  BeginningEdit="ActionsDataGrid_BeginningEdit">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Action" Binding="{Binding ActionType, TargetNullValue='-', FallbackValue='-'}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Barre d'outils -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="â†¶ Retour" x:Name="UndoButton" Click="Undo_Click" Margin="0,0,5,0" IsEnabled="False"/>
            <Button Content="â†· Avant" x:Name="RedoButton" Click="Redo_Click" Margin="0,0,5,0" IsEnabled="False"/>
            <Separator Margin="10,0"/>
            <Button Content="Ajouter Touche" Click="AddKeyboardAction_Click" Margin="0,0,5,0"/>
            <Button Content="Ajouter DÃ©lai" Click="AddDelayAction_Click" Margin="0,0,5,0"/>
            <Separator Margin="10,0"/>
            <Button Content="Supprimer" Click="DeleteAction_Click" Margin="0,0,5,0"/>
            <Button Content="Monter" Click="MoveUpAction_Click" Margin="0,0,5,0"/>
            <Button Content="Descendre" Click="MoveDownAction_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

