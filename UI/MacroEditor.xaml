<UserControl x:Class="MacroEngine.UI.MacroEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec options de répétition -->
        <StackPanel Grid.Row="0" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Répétition:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <ComboBox x:Name="RepeatModeComboBox" 
                          Grid.Column="1"
                          Width="150"
                          SelectionChanged="RepeatModeComboBox_SelectionChanged"
                          Margin="0,0,10,0">
                    <ComboBoxItem Content="Une seule fois" Tag="Once"/>
                    <ComboBoxItem Content="Répéter X fois" Tag="RepeatCount"/>
                    <ComboBoxItem Content="Jusqu'à interruption" Tag="UntilStopped"/>
                </ComboBox>
                
                <StackPanel x:Name="RepeatCountPanel" 
                            Grid.Column="2" 
                            Orientation="Horizontal" 
                            Visibility="Collapsed">
                    <TextBlock Text="Fois:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="RepeatCountTextBox" 
                             Width="60" 
                             Text="1"
                             TextChanged="RepeatCountTextBox_TextChanged"
                             Margin="0,0,10,0"/>
                </StackPanel>
                
                <StackPanel x:Name="DelayPanel" 
                            Grid.Column="3" 
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <TextBlock Text="Délai entre:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="DelayBetweenTextBox" 
                             Width="60" 
                             Text="0"
                             TextChanged="DelayBetweenTextBox_TextChanged"/>
                    <TextBlock Text="ms" VerticalAlignment="Center" Margin="3,0,0,0"/>
                </StackPanel>
                
                <TextBlock x:Name="RepeatInfoText" 
                           Grid.Column="5" 
                           VerticalAlignment="Center" 
                           Foreground="Gray" 
                           FontStyle="Italic"
                           HorizontalAlignment="Right"
                           Text="Appuyez sur le raccourci ou F11 pour arrêter"/>
            </Grid>
        </StackPanel>

        <!-- Liste des actions -->
        <DataGrid x:Name="ActionsDataGrid" 
                  Grid.Row="1" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.ScrollUnit="Pixel"
                  PreviewKeyDown="ActionsDataGrid_PreviewKeyDown"
                  CellEditEnding="ActionsDataGrid_CellEditEnding"
                  BeginningEdit="ActionsDataGrid_BeginningEdit">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Action" Binding="{Binding ActionType, TargetNullValue='-', FallbackValue='-'}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Barre d'outils -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="↶ Retour" x:Name="UndoButton" Click="Undo_Click" Margin="0,0,5,0" IsEnabled="False"/>
            <Button Content="↷ Avant" x:Name="RedoButton" Click="Redo_Click" Margin="0,0,5,0" IsEnabled="False"/>
            <Separator Margin="10,0"/>
            <Button Content="Ajouter Touche" Click="AddKeyboardAction_Click" Margin="0,0,5,0"/>
            <Button Content="Ajouter Délai" Click="AddDelayAction_Click" Margin="0,0,5,0"/>
            <Button Content="Ajouter Clic" Click="AddMouseAction_Click" Margin="0,0,2,0" ToolTip="Ajoute un clic gauche à la position actuelle"/>
            <Button Content="▼" Click="AddMouseActionAdvanced_Click" Margin="0,0,5,0" Padding="5,5" ToolTip="Options avancées (type de clic, coordonnées...)"/>
            <Separator Margin="10,0"/>
            <Button Content="Supprimer" Click="DeleteAction_Click" Margin="0,0,5,0"/>
            <Button Content="Monter" Click="MoveUpAction_Click" Margin="0,0,5,0"/>
            <Button Content="Descendre" Click="MoveDownAction_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

