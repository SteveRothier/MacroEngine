<Window x:Class="MacroEngine.UI.AppSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Applications cibles"
        Height="680" Width="640"
        MinHeight="560" MinWidth="560"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="{StaticResource BackgroundPrimaryBrush}"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Border x:Name="RootBorder"
            Background="{StaticResource BackgroundPrimaryBrush}"
            BorderBrush="{StaticResource BorderLightBrush}"
            BorderThickness="1"
            Focusable="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barre de titre -->
            <Border x:Name="TitleBarBorder"
                    Grid.Row="0"
                    shell:WindowChrome.IsHitTestVisibleInChrome="True"
                    Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="16,0,0,0"
                    Height="44"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="Applications cibles"
                                   Style="{StaticResource TextHeading}"
                                   FontSize="15"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Stretch"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button x:Name="CloseButton"
                                Style="{StaticResource WindowCaptionCloseButtonStyle}"
                                Click="CloseButton_Click"
                                ClickMode="Press"
                                Focusable="False"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                FontFamily="{StaticResource FontLucide}"
                                Content="&#xE1B2;"
                                ToolTip="Fermer"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Contenu : grille logique (liste = zone principale, sélection = toujours visible en bas) -->
            <Grid Grid.Row="1" Margin="20,16,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 1. Introduction -->
                <TextBlock Grid.Row="0"
                           Text="Choisissez les applications pour lesquelles cette macro sera active. Si aucune n’est sélectionnée, elle sera disponible partout."
                           Style="{StaticResource TextMuted}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,14"/>

                <!-- 2. Recherche + options -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchTextBox"
                             Grid.Column="0"
                             Style="{StaticResource TextBoxModern}"
                             Padding="8,6"
                             VerticalAlignment="Center"
                             ToolTip="Rechercher par nom de processus ou titre de fenêtre"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <Button Grid.Column="1"
                            Style="{StaticResource ButtonSecondary}"
                            Content="Actualiser la liste"
                            Click="RefreshButton_Click"
                            ClickMode="Press"
                            Focusable="False"
                            Padding="12,6"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="Recharger la liste des processus"/>
                </Grid>

                <!-- 3. Liste des processus (zone principale, scroll interne) -->
                <Border Grid.Row="2"
                        Background="{StaticResource BackgroundTertiaryBrush}"
                        BorderBrush="{StaticResource BorderLightBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusPanel}"
                        Padding="12"
                        Margin="0,0,0,12"
                        MinHeight="200"
                        ClipToBounds="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="Processus en cours d’exécution"
                                   Style="{StaticResource TextHeading}"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>
                        <CheckBox x:Name="ShowAllProcessesCheckBox"
                                  Grid.Row="1"
                                  Style="{StaticResource CheckBoxModern}"
                                  Content="Inclure les processus sans fenêtre visible"
                                  Margin="0,0,0,8"
                                  Checked="ShowAllProcessesCheckBox_Changed"
                                  Unchecked="ShowAllProcessesCheckBox_Changed"/>
                        <Border Grid.Row="2"
                                Background="{StaticResource BackgroundPrimaryBrush}"
                                BorderBrush="{StaticResource BorderLightBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource RadiusTextInput}"
                                MinHeight="280"
                                ClipToBounds="False"
                                Padding="4">
                            <ListView x:Name="ProcessListView"
                                      SelectionMode="Multiple"
                                      Background="{StaticResource BackgroundPrimaryBrush}"
                                      BorderThickness="0"
                                      Padding="4"
                                      Margin="0,0,0,12">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="MinHeight" Value="28"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="32">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              Style="{StaticResource CheckBoxModern}"
                                                              VerticalAlignment="Center"
                                                              Click="ProcessCheckBox_Click"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Processus" Width="180">
                                            <GridViewColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="Processus" Style="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                                                </DataTemplate>
                                            </GridViewColumn.HeaderTemplate>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Grid Width="16" Height="16" Margin="0,0,8,0">
                                                            <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                                                    CornerRadius="2"
                                                                    BorderBrush="{StaticResource BorderMediumBrush}"
                                                                    BorderThickness="1"/>
                                                            <Image Source="{Binding Icon}"
                                                                   Width="16" Height="16"
                                                                   Stretch="Uniform"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                                        </Grid>
                                                        <TextBlock Text="{Binding ProcessName}" Style="{StaticResource TextBody}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Fenêtre" Width="220" DisplayMemberBinding="{Binding WindowTitle}">
                                            <GridViewColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="Fenêtre" Style="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                                                </DataTemplate>
                                            </GridViewColumn.HeaderTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="PID" Width="50" DisplayMemberBinding="{Binding ProcessId}">
                                            <GridViewColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="PID" Style="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                                                </DataTemplate>
                                            </GridViewColumn.HeaderTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                    </Grid>
                </Border>

                <!-- 4. Sélection actuelle (toujours visible, résumé + ajout manuel) -->
                <Border Grid.Row="3"
                        Background="{StaticResource BackgroundTertiaryBrush}"
                        BorderBrush="{StaticResource BorderLightBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusPanel}"
                        Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock x:Name="SelectionTitleText"
                                       Text="Sélection actuelle"
                                       Style="{StaticResource TextHeading}"
                                       FontSize="13"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="SelectionCountText"
                                       Style="{StaticResource TextMuted}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="6,0,0,0"/>
                        </StackPanel>
                        <WrapPanel x:Name="SelectedAppsPanel"
                                   Grid.Row="1"
                                   MinHeight="24"
                                   Margin="0,0,0,10"/>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Ajouter un processus par nom :"
                                       Style="{StaticResource TextSecondary}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBox x:Name="ManualProcessTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource TextBoxModern}"
                                     Padding="6,4"
                                     VerticalAlignment="Center"
                                     KeyDown="ManualProcessTextBox_KeyDown"
                                     ToolTip="Ex. : notepad, chrome (sans .exe)"/>
                            <Button Grid.Column="2"
                                    Content="Ajouter"
                                    Style="{StaticResource ButtonPrimary}"
                                    Click="AddManualProcess_Click"
                                    ClickMode="Press"
                                    Focusable="False"
                                    Padding="12,6"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Pied : Annuler / Valider -->
            <Border Grid.Row="2"
                    Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,14">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Annuler"
                            Style="{StaticResource ButtonSecondary}"
                            Click="CancelButton_Click"
                            ClickMode="Press"
                            Focusable="False"
                            Width="100"
                            Margin="0,0,10,0"/>
                    <Button Content="Valider"
                            Style="{StaticResource ButtonPrimary}"
                            Click="OkButton_Click"
                            ClickMode="Press"
                            Focusable="False"
                            Width="100"
                            IsDefault="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
