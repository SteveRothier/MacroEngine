<Window x:Class="MacroEngine.UI.AppSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SÃ©lectionner les applications cibles" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre et description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Applications cibles" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="SÃ©lectionnez les applications pour lesquelles cette macro sera active." 
                       Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Barre de recherche -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchTextBox" 
                     Grid.Column="0"
                     Padding="5"
                     TextChanged="SearchTextBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="ðŸ” Rechercher une application..." 
                                                           Foreground="Gray" Margin="5,0,0,0"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button Grid.Column="1" Content="ðŸ”„ Actualiser" 
                    Click="RefreshButton_Click" 
                    ClickMode="Press"
                    Focusable="False"
                    Padding="10,5" Margin="5,0,0,0"/>
        </Grid>

        <!-- Liste des processus -->
        <GroupBox Grid.Row="2" Header="Processus en cours">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <CheckBox x:Name="ShowAllProcessesCheckBox" 
                          Content="Afficher tous les processus (y compris sans fenÃªtre)"
                          Margin="5"
                          Checked="ShowAllProcessesCheckBox_Changed"
                          Unchecked="ShowAllProcessesCheckBox_Changed"/>
                
                <ListView x:Name="ProcessListView" 
                          Grid.Row="1"
                          SelectionMode="Multiple"
                          Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Click="ProcessCheckBox_Click"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Processus" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding Icon}" 
                                                   Width="16" Height="16" 
                                                   Margin="0,0,6,0"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <TextBlock Text="{Binding ProcessName}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="FenÃªtre" Width="220" DisplayMemberBinding="{Binding WindowTitle}"/>
                            <GridViewColumn Header="PID" Width="60" DisplayMemberBinding="{Binding ProcessId}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>

        <!-- Applications sÃ©lectionnÃ©es -->
        <GroupBox Grid.Row="3" Header="Applications sÃ©lectionnÃ©es" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <WrapPanel x:Name="SelectedAppsPanel" Margin="5" MinHeight="30">
                    <TextBlock x:Name="NoSelectionText" 
                               Text="Aucune application sÃ©lectionnÃ©e (la macro sera disponible partout)"
                               Foreground="Gray" FontStyle="Italic"/>
                </WrapPanel>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,0,5,5">
                    <TextBlock Text="Ou entrez manuellement:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="ManualProcessTextBox" Width="200" Margin="0,0,5,0" Padding="3"/>
                    <Button Content="Ajouter" Click="AddManualProcess_Click" ClickMode="Press" Focusable="False" Padding="10,3"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Boutons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="Annuler" 
                    Click="CancelButton_Click" 
                    ClickMode="Press"
                    Focusable="False"
                    Padding="20,8" 
                    Margin="0,0,10,0"/>
            <Button Content="Valider" 
                    Click="OkButton_Click" 
                    ClickMode="Press"
                    Focusable="False"
                    Padding="20,8"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>

