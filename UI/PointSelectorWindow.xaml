<Window x:Class="MacroEngine.UI.PointSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sélection de Point"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="220" Height="110"
        IsHitTestVisible="False">
    <Border Background="#E0FFFFFF"
            BorderBrush="#FF0078D4"
            BorderThickness="2"
            CornerRadius="8"
            Padding="12">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="&#xE0AC;" FontFamily="{StaticResource FontLucide}" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock Text="Sélection de Point" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock x:Name="XTextBlock" VerticalAlignment="Center">
                    <Run Text="X: "/>
                    <Run x:Name="XValue" Text="0" FontWeight="Bold"/>
                </TextBlock>
                <TextBlock x:Name="YTextBlock" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Run Text="Y: "/>
                    <Run x:Name="YValue" Text="0" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
            
            <TextBlock Text="Cliquez pour sélectionner • ESC pour annuler" 
                       FontSize="10"
                       FontStyle="Italic"
                       Foreground="#FF666666"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>
