    <!-- Toggle mÃ©canique type module industriel : plaque, logement encastrÃ©, levier massif, LED -->
    <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="56"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <!-- 1. Plaque (support acier/aluminium, dÃ©gradÃ© vertical matiÃ¨re dense) -->
                    <Border x:Name="plaque"
                            Height="28"
                            MinWidth="56"
                            CornerRadius="5"
                            Padding="2"
                            BorderThickness="1"
                            BorderBrush="#2A2A2A">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="2" ShadowDepth="1" Direction="270"/>
                        </Border.Effect>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#4A4A4A" Offset="0"/>
                                <GradientStop Color="#404040" Offset="0.25"/>
                                <GradientStop Color="#383838" Offset="0.5"/>
                                <GradientStop Color="#323232" Offset="0.75"/>
                                <GradientStop Color="#2E2E2E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <!-- 2. Logement (encastrement, ombre interne, plus sombre) -->
                        <Border x:Name="logement"
                                CornerRadius="3"
                                Padding="3"
                                Background="#1C1C1C">
                            <Grid>
                                <!-- DÃ©sactivÃ© : [levier gauche] [point droite] -->
                                <Grid x:Name="layoutOff" Visibility="Visible">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border x:Name="levierOff"
                                            Grid.Column="0"
                                            MinWidth="22" Height="18" CornerRadius="2"
                                            VerticalAlignment="Center" HorizontalAlignment="Left"
                                            Margin="2,0,0,0"
                                            BorderThickness="1" BorderBrush="#353535">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="2" ShadowDepth="1" Direction="270"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Color="#5C5C5C" Offset="0"/>
                                                <GradientStop Color="#4A4A4A" Offset="0.4"/>
                                                <GradientStop Color="#404040" Offset="0.7"/>
                                                <GradientStop Color="#383838" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <Ellipse x:Name="ledOff" Grid.Column="1" Width="5" Height="5" Margin="6,0,0,0"
                                             VerticalAlignment="Center" Fill="#2A2A2A"/>
                                </Grid>
                                <!-- ActivÃ© : [point gauche] [levier droite] -->
                                <Grid x:Name="layoutOn" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse x:Name="ledOn" Grid.Column="0" Width="5" Height="5" Margin="0,0,6,0"
                                             VerticalAlignment="Center" Fill="#7A1E3A">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#7A1E3A" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <Border x:Name="levierOn"
                                            Grid.Column="1"
                                            MinWidth="22" Height="18" CornerRadius="2"
                                            VerticalAlignment="Center" HorizontalAlignment="Right"
                                            Margin="0,0,2,0"
                                            BorderThickness="1" BorderBrush="#5A1525">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="2" ShadowDepth="1" Direction="270"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Color="#8A3A5A" Offset="0"/>
                                                <GradientStop Color="#7A1E3A" Offset="0.4"/>
                                                <GradientStop Color="#6A1830" Offset="0.8"/>
                                                <GradientStop Color="#5A1528" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Ã‰tat activÃ© : afficher layout [point gauche][levier droite] -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="layoutOff" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="layoutOn" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <!-- Feedback mÃ©canique au clic : levier descend lÃ©gÃ¨rement -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="levierOff" Property="Margin" Value="2,1,0,0"/>
                            <Setter TargetName="levierOff" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="1" ShadowDepth="0" Direction="270"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="levierOn" Property="Margin" Value="0,1,2,0"/>
                            <Setter TargetName="levierOn" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="1" ShadowDepth="0" Direction="270"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="plaque" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

