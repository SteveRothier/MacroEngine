    <!-- Point d'Ã©tat (ActivÃ©/DÃ©sactivÃ©) - Simple point lumineux -->
    <Style x:Key="StatusDotStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="10"/>
        <Setter Property="Height" Value="10"/>
        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource SuccessColor}" Opacity="0.5" BlurRadius="4" ShadowDepth="0"/>
