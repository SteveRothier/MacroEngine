    <!-- Style pour les items de la liste des macros : profondeur (ombre) quand non sÃ©lectionnÃ©, plat quand sÃ©lectionnÃ© -->
    <Style x:Key="MacroListItemStyle" TargetType="ListBoxItem">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Panel.ZIndex" Value="0"/>
