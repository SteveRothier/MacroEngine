<Application x:Class="MacroEngine.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="UI/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ══════════════════════════════════════════════════════════
                     MacroEngine - Thèmes et Ressources Globales
                     Ordre de chargement : Colors → Typography → Controls
                     ══════════════════════════════════════════════════════════ -->
                
                <!-- 1. Palette de couleurs -->
                <ResourceDictionary Source="Themes/Colors.xaml"/>
                
                <!-- 2. Typographie et styles de texte -->
                <ResourceDictionary Source="Themes/Typography.xaml"/>
                
                <!-- 3. Styles des contrôles -->
                <ResourceDictionary Source="Themes/Controls.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

