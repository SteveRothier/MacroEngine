<Application x:Class="MacroEngine.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:MacroEngine.Converters"
             StartupUri="UI/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ══════════════════════════════════════════════════════════
                     MacroEngine - Thèmes et Ressources Globales
                     Ordre de chargement : Colors → Typography → Controls
                     ══════════════════════════════════════════════════════════ -->
                
                <!-- 1. Palette de couleurs -->
                <ResourceDictionary Source="Themes/Colors.xaml"/>
                
                <!-- 2. Typographie et styles de texte -->
                <ResourceDictionary Source="Themes/Typography.xaml"/>
                
                <!-- 3. Styles des contrôles -->
                <ResourceDictionary Source="Themes/Controls.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Retirer la bordure en pointillés par défaut au focus (focus visual) partout -->
            <Style TargetType="Control">
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            </Style>
            <!-- Remplacer le style de focus système (pointillés) par un style vide -->
            <Style x:Key="{x:Static SystemParameters.FocusVisualStyleKey}" TargetType="Control">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Control"/>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- ══════════════════════════════════════════════════════════
                 Converters
                 ══════════════════════════════════════════════════════════ -->
            <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
            <converters:KeyCodeToNameConverter x:Key="KeyCodeToNameConverter"/>
            <converters:ShortcutVisibilityConverter x:Key="ShortcutVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

